@model Cart
<h1>Product Details</h1>
<form method="post">
    <div class="row">
        <div class="col-6">
            <img src="@Model.Product.ImageUrl" width="200" height="200" />
        </div>
        <div class="col-6">
            <div class="row">
            <label asp-for="Product.Name">Product Name : @Model.Product.Name</label>
            <label asp-for="Product.Description">Product Description : @Model.Product.Description</label>
            <label asp-for="Product.Price">Product Price : @Model.Product.Price.ToString("0.00")</label>
            <label asp-for="Product.category.Id">Product Category : @Model.Product.category.Name</label>

            <div class="form-control">
                <label asp-for="Count"></label>
                <input asp-for="Count" class="form-control"/>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>

            <div class="form-control">
                <button class="btn btn-success" asp-controller="Home" asp-action="Index">Back To List</button>
                    <button class="btn btn-dark" asp-controller="Home" asp-action="Index">Add To Cart</button>
            </div>

            </div>
        </div>
    </div>
</form>
