@model MyApp.Models.ViewModels.ProductVM
@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">
    <div class="row p-3">
        <div class="col-sm-6">
            List Of Categories
        </div>
        <div class="col-sm-6 text-end">

            <a class="btn btn-info" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle">&nbsp;&nbsp;Create a New Product</i></a>

        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Product Description
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
        </tr>
    </thead>

</table>
