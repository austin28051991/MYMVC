@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-4">
    <div class="row p-3">
        <div class="col-sm-6">
            Categories
        </div>
        <div class="col-sm-6 text-end">
           
            <a class="btn btn-info" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-circle">&nbsp;&nbsp;Create a Category</i></a>
            
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%" >
    <thead>
    <tr>
        <th>
           Category Name
        </th>
        <th>
            Display Order
        </th>
        <th>
            Edit
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var items in Model)
        {
        <tr>
            <td>
                @items.Name
            </td>
            <td>
                @items.DisplayOrder
            </td>
                <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@items.Id"> <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@items.Id"> <i class="bi bi-trash3-fill"></i></a>
                </td>
        </tr>
        }
    </tbody>
</table>
